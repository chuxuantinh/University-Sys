@model UserProfileServiceModel

<section class="pb-3">
    <h1 class="d-flex flex-wrap justify-content-between align-items-center">
        My Profile
        <a asp-area="Identity"
           asp-page="/Account/Manage/Index" title="Manage" class="btn btn-outline-primary">
            <i class="fa fa-pen"></i>
        </a>
    </h1>
    <p class="lead d-flex flex-wrap justify-content-around align-items-center">
        @Model.Name
        <span><i class="fa fa-user"></i> @Model.Username</span>
        <span><i class="fa fa-envelope"></i> @Model.Email</span>
        <span><i class="fa fa-birthday-cake"></i> @Model.Birthdate.ToDate()</span>
    </p>
</section>
